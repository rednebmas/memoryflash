{
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "./dist",
		"paths": {
			"*": ["node_modules/*"]
		},
		"rootDir": "./src",
		"skipLibCheck": true,
		"lib": ["es6"],
		"sourceMap": true,
		"strict": true,
		"target": "es6",
		"types": ["node", "express", "mocha"]
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*"]
}
