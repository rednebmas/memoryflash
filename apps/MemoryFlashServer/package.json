{
	"name": "backend-template",
	"version": "1.0.0",
	"main": "app.js",
	"license": "MIT",
	"scripts": {
		"build": "tsc --project ./",
		"dev": "nodemon src/app.ts",
		"format": "prettier --write \"src/**/*.{ts,json}\"",
		"lint": "eslint src/**/*.ts",
		"start:prod": "yarn build && node dist/app.js",
		"test": "NODE_ENV=test mocha --require ts-node/register --require dotenv/config src/**/*.test.ts",
		"test:watch": "nodemon --ext ts --exec 'yarn test'"
	},
	"dependencies": {
		"MemoryFlashCore": "*",
		"bcrypt": "^5.1.1",
		"bcryptjs": "^2.4.3",
		"bson-objectid": "^2.0.4",
		"connect-mongo": "^5.1.0",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.20.0",
		"express-session": "^1.18.0",
		"express-winston": "^4.2.0",
		"mongoose": "^8.6.0",
		"passport": "^0.7.0",
		"passport-local": "^1.0.0",
		"tonal": "^6.2.0",
		"winston": "^3.11.0"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/chai": "^4.3.9",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.20",
		"@types/express-session": "^1.17.9",
		"@types/jsonwebtoken": "^9.0.4",
		"@types/mocha": "^10.0.3",
		"@types/mongodb-memory-server": "^2.3.0",
		"@types/mongoose": "^5.11.97",
		"@types/node": "22.5.4",
		"@types/passport": "^1.0.14",
		"@types/passport-local": "^1.0.37",
		"@typescript-eslint/eslint-plugin": "^6.9.0",
		"@typescript-eslint/parser": "^6.9.0",
		"chai": "^4.3.10",
		"eslint": "^8.52.0",
		"husky": "^8.0.3",
		"mocha": "^10.2.0",
		"mongodb-memory-server": "^10.0.0",
		"nodemon": "^3.0.1",
		"prettier": "^3.0.3",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint && yarn format"
		}
	},
	"nodemonConfig": {
		"events": {
			"\\033c clears the terminal": "(comment)",
			"start": "printf \"\\033c\""
		}
	}
}
